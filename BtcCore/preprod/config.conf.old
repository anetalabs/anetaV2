# Maintain a full transaction index, used by the getrawtransaction rpc call.
txindex=1
datadir=/data
# Accept command line and JSON-RPC commands.
server=1

# Bind to given address to listen for JSON-RPC connections.
rpcbind=0.0.0.0

# Username and hashed password for JSON-RPC connections.
# Generate this value with the share/rpcauth/rpcauth.py script in the Bitcoin Core repository.
#
server=1
rpcuser=test
rpcpassword=123456789

# Listen for JSON-RPC connections on this port
rpcport=18332

# Allow JSON-RPC connections from specified source.
rpcallowip=0.0.0.0/0

# Specify wallet database path.


# Options only for testnet
[test]
testnet=1
# Prune the blockchain to reduce storage requirements (in MB, 0 = disable pruning).
prune=550

# Options only for regtest
[regtest]

